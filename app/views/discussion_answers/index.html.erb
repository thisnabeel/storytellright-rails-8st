<p id="notice"><%= notice %></p>

<h1>Listing Discussion Answers</h1>

<table>
  <thead>
    <tr>
      <th>Body</th>
      <th>User</th>
      <th>Discussion question</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @discussion_answers.each do |discussion_answer| %>
      <tr>
        <td><%= discussion_answer.body %></td>
        <td><%= discussion_answer.user_id %></td>
        <td><%= discussion_answer.discussion_question_id %></td>
        <td><%= link_to 'Show', discussion_answer %></td>
        <td><%= link_to 'Edit', edit_discussion_answer_path(discussion_answer) %></td>
        <td><%= link_to 'Destroy', discussion_answer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

