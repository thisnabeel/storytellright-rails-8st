<p id="notice"><%= notice %></p>

<h1>Listing Discussion Questions</h1>

<table>
  <thead>
    <tr>
      <th>Body</th>
      <th>Position</th>
      <th>Discussion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @discussion_questions.each do |discussion_question| %>
      <tr>
        <td><%= discussion_question.body %></td>
        <td><%= discussion_question.position %></td>
        <td><%= discussion_question.discussion_id %></td>
        <td><%= link_to 'Show', discussion_question %></td>
        <td><%= link_to 'Edit', edit_discussion_question_path(discussion_question) %></td>
        <td><%= link_to 'Destroy', discussion_question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

