
<style>
	.finder {
		padding: 30px;
		font-size: 34px;
	}
</style>

<input type="text" class="form-control finder" placeholder="Type to search...">

<script>
	$(".finder").on("keyup", function(){
		console.log($(this).val())
		val = $(this).val()
		$(".jokes-list > li").hide()
		$(".jokes-list > li").each(function(){
			
			if ($(this).find(".joke-writer").length && $(this).find(".joke-writer").html().toLowerCase().indexOf(val.toLowerCase()) != -1){
				$(this).show()
			}

			if ($(this).find(".joke-title").length && $(this).find(".joke-title").html().toLowerCase().indexOf(val.toLowerCase()) != -1){
				$(this).show()
			}
		})

		if (val == "") {
			$(".jokes-list > li").show()
		}
	})
</script>