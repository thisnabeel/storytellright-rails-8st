
<% if m.link.present? %>
    <iframe frameborder="0" scrolling="no" marginheight="0" width="100%" marginwidth="0" type="text/html" 
    src="https://www.youtube.com/embed/<%= m.link.split("watch?v=")[1] %>?autoplay=0&fs=1&iv_load_policy=3&showinfo=0&rel=0&cc_load_policy=0&start=0&end=0"
    ></iframe>
    <hr>
<% end %>

<span class="joke-title">
    <%= m.title %>
</span>

    <% if m.check("armature").present?  %>
      <hr>
      <div class="story-armature armature">
        <%= m.check("armature").html_safe %>
      </div>
    <% end %>
    
<a href="/jokes/<%= m.id %>" class="enter-btn">
    Enter
</a>