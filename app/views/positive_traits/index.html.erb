<p id="notice"><%= notice %></p>

<h1>Listing Positive Traits</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Details</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @positive_traits.order("title ASC").each do |positive_trait| %>
      <tr>
        <td><%= positive_trait.title %></td>
        <td><%= link_to 'Show', positive_trait %></td>
        <td><%= link_to 'Edit', edit_positive_trait_path(positive_trait) %></td>
        <td><%= link_to 'Destroy', positive_trait, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

