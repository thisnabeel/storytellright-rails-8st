<style>
  body {
    /* background: #031623; */
    /* color: #fff; */
  }

  .production-header {
    max-width: max-content;
    margin: 0 auto;
    position: relative;
  }

  .view-map {
    position: absolute;
    top: 40px;
    left: -30px;
  }
  .make-slug {
    position: absolute;
    top: 40px;
    right: -30px;
  }

  .production-title {
    text-align: center;
    margin-top: 35px;
    margin-bottom: 35px;
    background: #edff60;
    padding: 20px;
  }



  .productions .title {
    font-family: 'sf';
    text-align: center;
    font-size: 24px;
  }

  .enter-btn {
    display: block;
    width: 100%;
    margin-top: 30px;
    padding: 15px 10px;
    border: 4px solid #ccc;
    border-radius: 80px;
    font-size: .9em;
    font-weight: bold;
    line-height: 1em;
    letter-spacing: .04em;
    text-transform: uppercase;
  }

  .add-task {
    position: absolute;
    top: -10px;
    right: -10px;
    background: #FFCD89;
    padding: 8px;
    border-radius: 20px;
  }

  .add-task[count="0"] {
    display: none;
    background: aliceblue;
  }
  

  .production:hover .add-task {
    display: block;
  }

  .production .production-link {
    display: none;
  }

  .delete-story {
    display:none;
  }

  .production-users li {
    display: inline-block;
    padding: 10px;
    background: aliceblue;
    margin: 10px;
    border-radius: 15px;
  }

  .production-users {
    display: table;
    text-align: center;
    max-width: max-content;
    margin: 0 auto;
  }

  .picon {
    position: absolute;
    left: 0;
    top: 0;
    padding: 15px;
  }

  .remove-user {
    display: none;
    position: absolute;
    left: -4px;
    top: 4px;
  }

  .production-users > li {
    position: relative;
  }
  .production-users > li:hover .remove-user {
    display: inline-block;
  }

  .add-user {
    color: #cdd2ab;
    background: transparent;
  }

  span.year {
    display: none !important;
  }
</style>




<div class="production-header">
  <a class="view-map fa fa-map" href="/<%= @production.code %>/map"></a>
  <h1 class="production-title" data-id="<%= @production.id %>" code="<%= @production.code %>" contentEditable key="title" url="/productions/<%= @production.id %>">
    <%= @production.title %>
  </h1>
  <span class="make-slug fa fa-paper-plane" data-id="<%= @production.id %>"></span>
</div>

<%= render "productions/users/view" %>

<%= render "productions/boards/main" %>

<%= render "songs/engine" %>

<script>
    $('.production-title[contentEditable]').contentEdit(function(val, el){
      console.log(val)
      code = el.attr('code')
      $(".project[code='"+code+"'] a").html(val)
      $.notify("Title Saved!", "success");
    });

</script>