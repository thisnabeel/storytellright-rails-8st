	$("body").on("click", ".add-cp", function(){
		out = `<div class="col-lg-6"><textarea class="froalize"></textarea></div><div class="col-lg-6"><textarea class="froalize"></textarea></div>`

		remover = `<i class="fa fa-trash remove-cp"></i>`
