		$(".climax-pieces").append(output)

		makeFroala()
	})

	function fetchCP(array){
		$.each(array, function(index, item){
			out = ``
			$.each(item, function(index, item){

				out += `<div class="col-lg-6"><textarea class="froalize">`+item+`</textarea></div>`
			})

			remover = `<i class="fa fa-trash remove-cp"></i>`
		
			output = `<div class="row cp">`+out+remover+`</div>`
	    
			$(".climax-pieces").append(output)
		})

	}


	$("body").on("click", ".remove-cp", function(){
		li = $(this).closest(".row")
		li.remove()

		saveStory()
    	save()
	})


	function saveCP(){
		
		table = $(".climax-pieces")
		array = []
		table.find(".cp").each(function(){
			hash = []
			$(this).find('.fr-view').each(function(index, item){
				hash.push($(this).html())
			})
			array.push(hash)
		})
		console.log("cp", array)
		return array
	}


</script>