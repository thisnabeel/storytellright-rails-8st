<style>
  #screenwriteModal {

  }

  #screenwriteModal .modal-dialog .modal-title {
      font-size: 18px;
      color: #5f27cd;
  }

  #screenwriteModal .modal-content {
    padding: 0;
  }

  #screenwriteModal .modal-body {
    padding: 0;
  }

</style>

<!-- Modal -->
<div class="modal fade" id="screenwriteModal" tabindex="-1" role="dialog" aria-labelledby="screenwriteModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <div class="modal-title" id="screenwriteModalLabel">Modal title</div>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render "stories/screenwriter/writer" %>
      </div>
    </div>
  </div>
</div>

<script>
  function screenwriteModal(){
    $("#screenwriteModal").modal("show")
  }
</script>